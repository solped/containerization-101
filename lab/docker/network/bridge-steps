docker network ls
docker network create my-net

# default
docker create --name my-nginx --publish 8080:80 nginx:latest  
docker start my-nginx
docker inspect my-nginx 

# User-defined
docker create --name my-nginx-custom-network --network my-net --publish 8080:80 nginx:latest
docker start my-nginx-custom-network
docker inspect my-nginx-custom-network  

docker inspect -f '{{range .NetworkSettings.Networks}}{{json .Aliases}}{{end}}' my-nginx-custom-network
docker network inspect network1 --format="{{json .Containers}}" | jq

