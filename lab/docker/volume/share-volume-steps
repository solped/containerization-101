docker volume ls
docker volume create DataVolume
docker run --name some-nginx -d -p 8080:80 nginx
docker inspect some-nginx --format="{{json .Mounts}}" | jq
docker run --name some-nginx-1 -v DataVolume:/usr/share/nginx/html -d -p 8081:80 nginx
docker run --name some-nginx-2 -v DataVolume:/usr/share/nginx/html -d -p 8082:80 nginx
docker inspect some-nginx-1 --format="{{json .Mounts}}" | jq
docker inspect some-nginx-2 --format="{{json .Mounts}}" | jq